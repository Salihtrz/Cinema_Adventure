@model EntityLayer.Class.Movie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label"></label>
                <input asp-for="MovieName" class="form-control" />
                <span asp-validation-for="MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieContent" class="control-label"></label>
                <textarea asp-for="MovieContent" class="textarea"></textarea>
                <span asp-validation-for="MovieContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoviePicture" class="control-label"></label>
                <input asp-for="MoviePicture" class="form-control" />
                <span asp-validation-for="MoviePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoLink" class="control-label"></label>
                <input asp-for="VideoLink" class="form-control" />
                <span asp-validation-for="VideoLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseCountry" class="control-label"></label>
                <input asp-for="ReleaseCountry" class="form-control" />
                <span asp-validation-for="ReleaseCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieRunTime" class="control-label"></label>
                <input asp-for="MovieRunTime" class="form-control" />
                <span asp-validation-for="MovieRunTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="selectedCastId" class="control-label">Casts</label>
                <p>Press CTRL for multiple selection</p>
                <select id="selectedCastId" name="selectedCastId" class="form-control" multiple>
                    @foreach (var cast in ViewBag.CastId)
                    {
                        <option value="@cast.Value">@cast.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="selectedCategoryId" class="control-label">Categories</label>
                <p>Press CTRL for multiple selection</p>
                <select id="selectedCategoryId" name="selectedCategoryId" class="form-control" multiple>
                    @foreach (var Category in ViewBag.CategoryId)
                    {
                        <option value="@Category.Value">@Category.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="~/js/site.js"></script>