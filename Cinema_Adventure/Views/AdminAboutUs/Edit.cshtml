@model EntityLayer.Class.AboutUs

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AboutUsId" />
            <div class="form-group">
                <label asp-for="AboutUsTitle" class="control-label"></label>
                <input asp-for="AboutUsTitle" class="form-control" />
                <span asp-validation-for="AboutUsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutUsContent" class="control-label"></label>
                <textarea asp-for="AboutUsContent" class="textarea">@Model.AboutUsContent</textarea>
                <span asp-validation-for="AboutUsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutUsPicture" class="control-label"></label>
                <input asp-for="AboutUsPicture" class="form-control" />
                <span asp-validation-for="AboutUsPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}