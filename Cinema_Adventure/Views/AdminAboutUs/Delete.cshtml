@model EntityLayer.Class.AboutUs

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AboutUsTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AboutUsTitle)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AboutUsContent)
            </dt>
            <dd class="col-sm-10">
                <textarea class="textarea" readonly>@Html.DisplayFor(model => model.AboutUsContent)</textarea>
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AboutUsPicture)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AboutUsPicture)
            </dd>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AboutUsId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
