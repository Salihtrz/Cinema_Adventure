@model EntityLayer.Class.AboutUs

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />
<div>
    <dl class="row">
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AboutUsTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AboutUsTitle)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AboutUsContent)
            </dt>
            <dd class="col-sm-10">
                <textarea class="textarea" readonly>@Html.DisplayFor(model => model.AboutUsContent)</textarea>
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AboutUsPicture)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AboutUsPicture)
            </dd>
        </div>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>