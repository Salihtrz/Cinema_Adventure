@model EntityLayer.Class.Review

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />
<dl class="row">
    <div class="col-sm-12">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewTitle)
        </dd>
    </div>
    <div class="col-sm-12">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewContent)
        </dt>
        <dd class="col-sm-10">
            <textarea class="textarea" readonly>@Html.DisplayFor(model => model.ReviewContent)</textarea>
        </dd>
    </div>
    <div class="col-sm-12">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoteGiven)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoteGiven)
        </dd>
    </div>
    <div class="col-sm-12">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SendingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SendingDate)
        </dd>
    </div>
</dl>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
