@model IEnumerable<EntityLayer.Class.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th>
                User Email
            </th>
            <th>
                User Name
            </th>
            <th>
                User Surname
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (Model != null && item.UserEmail != null)
                    {
                    @Html.DisplayFor(modelItem => item.UserEmail)
                    }
                    else
                    {
                        <span>NULL</span>
                    }
                </td>
                <td>
                    @if (Model != null && item.UserName != null)
                    {
                    @Html.DisplayFor(modelItem => item.UserName)
                    }
                    else
                    {
                        <span>NULL</span>
                    }
                </td>
                <td>
                    @if (Model != null && item.UserSurname != null)
                    {
                    @Html.DisplayFor(modelItem => item.UserSurname)
                    }
                    else
                    {
                    <span>NULL</span>
                    }
                </td>
                <td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.UserID">Edit</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.UserID">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.UserID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
