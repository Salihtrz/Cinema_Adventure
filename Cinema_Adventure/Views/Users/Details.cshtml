@model EntityLayer.Class.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <dl class="row">
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserEmail)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserSurname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserSurname)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
        </div>
        <div class="col-sm-12">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.roles)
            </dt>
            <dd class="col-sm-10">
                @if (Model.roles != null && Model.roles.RoleId != null)
                    {
                @Html.DisplayFor(model => model.roles.RoleName)
                }
                else
                {
                    <span>NULL</span>
                }
            </dd>
        </div>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
