@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http
@model IEnumerable<EntityLayer.Class.Cast>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CastSurname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CastSurname)
            </td>
                <td>
                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("IsAdmin") == 1)
                    {
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.CastId">Edit</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CastId">Delete</a>
                    }
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.CastId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>








