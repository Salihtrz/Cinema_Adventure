@model EntityLayer.Class.News

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <div class="col-sm-12">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NewsTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NewsTitle)
        </dd>
        </div>
        <div class="col-sm-12">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NewsContent)
        </dt>
        <dd class = "col-sm-10">
                <textarea class="textarea" readonly>@Html.DisplayFor(model => model.NewsContent)</textarea>
        </dd>
        </div>
        <div class="col-sm-12">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NewsPicture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NewsPicture)
        </dd>
        </div>
        <div class="col-sm-12">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SendingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SendingDate)
        </dd>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NewsId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
